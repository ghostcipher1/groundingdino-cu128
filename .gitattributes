# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout.
*.py text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.sh text eol=lf
*.bash text eol=lf
Dockerfile text eol=lf
.dockerignore text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
.editorconfig text eol=lf

# Denote all files that are truly binary and should not be modified.
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.pth binary
*.pt binary
*.ckpt binary
*.weights binary
*.so binary
*.o binary
*.a binary
*.whl binary
*.tar.gz binary
*.zip binary

# CUDA source files
*.cu text eol=lf
*.cuh text eol=lf
*.cpp text eol=lf
*.h text eol=lf
*.hpp text eol=lf

